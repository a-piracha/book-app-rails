<div style="padding: 20px; border-radius: 8px;"> 
    <%= link_to "Go Back", chat_app_path, style: "color: #0056b3; text-decoration: none;" %>


        <p>Conversation of <%= @sender_id.name %></p>
  <div>
    <h3>Messages</h3>
      <% if @conversation.messages.any? %>
          <div style="margin-top: 20px;"> 
          <% @conversation.messages.each do |message| %>
              <p style="padding: 10px; margin-bottom: 5px;"> 
              <% if message.sender_id == @sender_id.id %>
                  <strong style="font-weight: bold;"><%= @sender_id.name %>:</strong> 
                  <span style="color: green;"><%= message.content %> </span>
              <% else %>
                  <strong style="font-weight: bold;"><%= @receiver_id.name %>:</strong> 
                  <span style="color: red;"><%= message.content %> </span>
              <% end %>
                  <br>
                  <span style="font-size: 12px; color: #777;"> <%= message.created_at.localtime.strftime("%m/%d/%Y %H:%M %p") %> </span> 
              </p>
          <% end %>
          </div>
      <% end %>
  </div>
    <%= form_with(model: @message , url:create_message_path) do |f| %>
            <%= f.text_area :content, style: "width: 20%; padding: 12px; border: 1px solid #ddd;" %>
            <%= f.submit "Send", style: "background-color: #007bff; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;" %> 
    <% end %>

</div>
