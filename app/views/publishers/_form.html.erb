<%= form_with(model: @publisher) do |form| %>

    <div style="margin-bottom: 12px;"> 
        <%= form.label :name, style: "font-weight: bold; display: block;" %>
        <%= form.text_field :name, style: "width: 250px; padding: 10px; border: 1px solid #000000; border-radius: 3px;" %>
    </div>
    <div style="margin-bottom: 12px;">  
        <%= form.label :address, style: "font-weight: bold; display: block;" %>
        <%= form.text_field :address, style: "width: 250px; padding: 10px; border: 1px solid #000000; border-radius: 3px;" %>
    </div>
    <%= form.submit yield(:button_text), style: "background-color: #007bff; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;" %>  
    <%= link_to "Go Back", publishers_path, style: "color: #0056b3; text-decoration: none;" %>
<% end %>