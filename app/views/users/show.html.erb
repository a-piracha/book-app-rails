<div style="margin-bottom: 20px; padding: 15px; "> 
    <p style="font-weight: bold; text-align: center;"> 
    <%= @user.id %>. User: <%= @user.name %> </p>

    <h3 style="margin-top: 15px; font-size: 18px;">My Contacts </h3> 
    <% @users.each do |user| %>
        <% if user.id != @user.id %> 
            <p style="margin-bottom: 10px; padding: 8px; border-radius: 3px;">
                <%= user.id %>.
                <%= user.name %>
                <%= link_to "Chat ", new_conversation_path(@user.id, user.id), style: "color: blue; text-decoration: none;" %><br>
            </p>
        <% end %>
    <% end %>
    <p><%= link_to "Go Back", chat_app_path, style: "color: blue; text-decoration: none;" %></p>
</div>
